<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#888"
            android:padding="4dip"
            android:color="?android:attr/textColorPrimaryInverse"
            android:text="内部存储目录：getDir/SEn" />

        <TextView
            android:id="@+id/getDir"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dip" />
        <TextView
            style="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#888"
            android:padding="4dip"
            android:color="?android:attr/textColorPrimaryInverse"
            android:text="内部存储目录：getFilesDir" />

        <TextView
            android:id="@+id/getFilesDir"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dip" />
        
        <TextView
            style="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#888"
            android:padding="4dip"
            android:color="?android:attr/textColorPrimaryInverse"
            android:text="内部缓存目录：getCacheDir" />

        <TextView
            android:id="@+id/getCacheDir"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dip" />
        
        <TextView
            style="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#888"
            android:padding="4dip"
            android:color="?android:attr/textColorPrimaryInverse"
            android:text="外部缓存目录：getExternalCacheDir" />

        <TextView
            android:id="@+id/getExternalCacheDir"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dip" />
        
        
    </LinearLayout>

</ScrollView>